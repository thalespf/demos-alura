* {
  margin: 0;
  padding: 0;
}

ul {
  list-style: none;
}

#menu_align {
  margin-left: 10%;
}

ul#menu {
  padding:0;
  list-style:none;
}

ul#menu li {
  border: 1px solid #000;
  width: 163px;
  float: left;
}

ul#menu li a {
  display: block;
  padding: 6px;
  height: 30px;
  line-height: 30px;
  background: #F60;
  color: #FFF;
  text-decoration: none;
  font: 13px;
  text-align: center;
}

ul#menu li a:hover {
  background: #CCC;
  color: #000;
}

ul#menu li ul {
  display: none;
  position: absolute;
  top: 30px;
  left: 0;
}

ul#menu li:hover ul {
  display: block;
}

