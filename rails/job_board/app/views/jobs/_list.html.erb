<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td>
          <%= job.title %>
          <%= job_title(job) %>
        </td>
        <td><%= job.description %></td>
        <td><%= pluralize job.comments.size, 'comment' %></td>
        <td><%= link_to 'Show', job %> |</td>
        <td><%= link_to 'Edit', edit_job_path(job) %> | </td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @jobs %>